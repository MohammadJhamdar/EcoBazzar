@page
@model EcoBazzar.Pages.Backoffice.ProductModel
@{
    Layout = "AdminDashboard";
}
<h1>Product</h1>

<head>
    <!-- Other head content -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            margin-right: 20px;
        }

        .btn-green {
            background-color: #28a745;
            color: white;
            padding: 5px 10px;
        }

            .btn-green:hover {
                background-color: #218838;
                color: white;
            }

        .btn-icon {
            padding: 5px;
            font-size: 1rem;
        }

        .search-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-box {
            display: flex;
            align-items: center;
            width: 300px;
        }

            .search-box input {
                width: 100%;
                padding: 5px 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .search-box button {
                border: none;
                background: none;
                margin-left: -30px;
            }

        .table-responsive {
            margin-right: 20px;
        }

        .table {
            border: 1px solid #ccc; /* Light grey border */
            border-collapse: collapse;
            width: 100%;
        }

            .table th,
            .table td {
                padding: 8px;
                text-align: left;
                border: 1px solid #ccc; /* Light grey border */
            }

            .table th {
                background-color: #f0f8ff; /* Light blue background for headers */
            }

            .table td {
                white-space: nowrap;
                text-overflow: ellipsis;
                overflow: hidden;
                max-width: 200px;
            }

        /* Alternating row colors */
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f0f8ff; /* Light blue */
        }

        .table-striped tbody tr:nth-of-type(even) {
            background-color: white;
        }

        .table-actions {
            display: flex;
            gap: 5px;
        }

            .table-actions form button {
                padding: 5px;
            }

            .table-actions i {
                margin-right: 0;
            }
    </style>
</head>
@if (Model.Products != null && Model.Products.Count > 0)
{
    <div class="search-container">
        <form method="get" class="search-box" asp-page-handler="Search">
            <input type="text" name="searchTerm" placeholder="Search..." aria-label="Search" />
            <button type="submit">
                <i class="fas fa-search"></i>
            </button>
        </form>
        <a href="@Url.Page("ProductForm")" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Category
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>
                            <img src="@product.Image" alt="@product.Image"
                                 class="img-thumbnail" style="width: 35px; height: 35px;" />
                        </td>


                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Price</td>


                        <td class="table-actions">
                            <form method="get" asp-page="Product" asp-page-handler="ById" asp-route-id="@product.Id">
                                <button type="submit" class="btn btn-primary btn-icon"> <i class="fas fa-eye"></i></button>
                            </form>
                            <form method="get" asp-page="ProductForm" asp-route-id="@product.Id">
                                <button type="submit" class="btn btn-warning btn-icon"><i class="fas fa-pen"></i></button>
                            </form>
                            <form method="Get" asp-page="Product" asp-page-handler="Delete" asp-route-id="@product.Id" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <button type="submit" class="btn btn-danger btn-icon"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else if (Model.Product != null)
{
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">@Model.Product.Name</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@Model.Product.Image" alt="Product Image" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <p><strong>Description:</strong> @Model.Product.Description</p>
                        <p><strong>Price:</strong> $@Model.Product.Price</p>
                        <p><strong>Brand:</strong> @Model.Product.Brand</p>
                        <p><strong>Rating:</strong> @Model.Product.Rating / 5</p>
                        <p><strong>Weight:</strong> @Model.Product.Weight kg</p>
                        <p><strong>Stock:</strong> @Model.Product.Stock</p>
                        <p><strong>Discount:</strong> @Model.Product.Discount ?? "N/A"</p>
                        <p><strong>Date Added:</strong> @Model.Product.DateAdded.ToString("MM/dd/yyyy")</p>
                        <p><strong>Date Modified:</strong> @Model.Product.DateModified?.ToString("MM/dd/yyyy") ?? "N/A"</p>
                        <p><strong>SubCategory:</strong> @Model.Product.SubCategory.Name</p>
                        <p><strong>SubCategory ID:</strong> @Model.Product.SubCategoryId</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

   @*  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script> *@
}
else
{
    <h2>No Data Available!!</h2>
}


<script>
    $(document).ready(function() {
        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage) {
            alert(successMessage);
        }
    });
</script>