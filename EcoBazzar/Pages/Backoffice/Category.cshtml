@page "{handler?}/{id:int?}"
@model EcoBazzar.Pages.Backoffice.CategoryModel
@{
    Layout = "AdminDashboard";
}
<head>
    <!-- Other head content -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            margin-right: 20px;
        }

        .btn-green {
            background-color: #28a745;
            color: white;
            padding: 5px 10px;
        }

            .btn-green:hover {
                background-color: #218838;
                color: white;
            }

        .btn-icon {
            padding: 5px;
            font-size: 1rem;
        }

        .search-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-box {
            display: flex;
            align-items: center;
            width: 300px;
        }

            .search-box input {
                width: 100%;
                padding: 5px 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .search-box button {
                border: none;
                background: none;
                margin-left: -30px;
            }

        .table-responsive {
            margin-right: 20px;
        }

        .table {
            border: 1px solid #ccc; /* Light grey border */
            border-collapse: collapse;
            width: 100%;
        }

            .table th,
            .table td {
                padding: 8px;
                text-align: left;
                border: 1px solid #ccc; /* Light grey border */
            }

            .table th {
                background-color: #f0f8ff; /* Light blue background for headers */
            }

            .table td {
                white-space: nowrap;
                text-overflow: ellipsis;
                overflow: hidden;
                max-width: 200px;
            }

        /* Alternating row colors */
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f0f8ff; /* Light blue */
        }

        .table-striped tbody tr:nth-of-type(even) {
            background-color: white;
        }

        .table-actions {
            display: flex;
            gap: 5px;
        }

            .table-actions form button {
                padding: 5px;
            }

            .table-actions i {
                margin-right: 0;
            }
    </style>
</head>
@if (Model.categories != null && Model.categories.Count > 0)
{
    <div class="search-container">
        <form method="get" class="search-box" asp-page-handler="Search">
            <input type="text" name="searchTerm" placeholder="Search..." aria-label="Search" />
            <button type="submit">
                <i class="fas fa-search"></i>
            </button>
        </form>
        <a href="@Url.Page("CategoryForm")" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Category
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Add SubCategory</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.categories)
                {
                    <tr>
                        <td>
                            <img src="@category.Image" alt="@category.Image"
                                 class="img-thumbnail" style="width: 35px; height: 35px;" />
                        </td>

                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td style="text-align: center;padding-right: -500px; padding-top: 10px;">
                            <a href="@Url.Page("SubCategory", new { id = category.Id })" class="btn btn-green btn-sm">
                                <i class="fas fa-plus"></i> Add SubCategory
                            </a>
                        </td>


                        <td class="table-actions">
                            <form method="get" asp-page="Category" asp-page-handler="ById" asp-route-id="@category.Id">
                                <button type="submit" class="btn btn-primary btn-icon"> <i class="fas fa-eye"></i></button>
                            </form>
                            <form method="get" asp-page="CategoryForm" asp-route-id="@category.Id">
                                <button type="submit" class="btn btn-warning btn-icon"><i class="fas fa-pen"></i></button>
                            </form>
                            <form method="post" asp-page="Category" asp-page-handler="Delete" asp-route-id="@category.Id" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <button type="submit" class="btn btn-danger btn-icon"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else if (Model.cat != null)
{
    <div class="cv-container">
        <h1>Category Name : @Model.cat.Name</h1>
        <p>Description: @Model.cat.Description</p>
        <p>
            <img src="@Model.cat.Image" alt="Category Image" width="50px" height="50px" />
        </p>
    </div>
}
else
{
    <h2>No Data Available!!</h2>
}
