@page
@model EcoBazzar.Pages.Account_Page.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        .custom-link {
            text-decoration: none;
            color: #007bff; /* Bootstrap primary color */
        }

            .custom-link:hover {
                color: #0056b3; /* Darker shade for hover effect */
            }

        .form-group-spacing {
            margin-bottom: 1.5rem;
        }

        .position-relative {
            position: relative;
        }

            .position-relative .fa-eye,
            .position-relative .fa-eye-slash {
                position: absolute;
                top: 70%;
                right: 10px;
                transform: translateY(-50%);
                cursor: pointer;
            }

        .card-title {
            background: linear-gradient(45deg, #007bff, #0056b3);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 2rem;
            font-weight: bold;
            text-align: center; /* Center align the text */
        }
    </style>
</head>
<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm" style="width: 25rem;">
        <div class="card-body">
            <h2 class="card-title">Sign Up</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group form-group-spacing">
                    <label for="Username">Username</label>
                    <input asp-for="user.Name" class="form-control" id="Username" name="Username" placeholder="Enter your username" />
                    <span asp-validation-for="user.Name" data-valmsg-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group form-group-spacing">
                    <label for="Email">Email</label>
                    <input asp-for="user.Email" class="form-control" id="Email" name="Email" placeholder="Enter your email" />
                    <span asp-validation-for="user.Email" data-valmsg-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group form-group-spacing position-relative">
                    <label for="Password">Password</label>
                    <input asp-for="user.Password" class="form-control" id="Password" name="Password" placeholder="Enter your password" />
                    <span class="fa fa-eye" id="togglePassword" onclick="togglePasswordVisibility('Password', 'togglePassword')"></span>
                    <span asp-validation-for="user.Password" data-valmsg-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-group-spacing position-relative">
                    <label for="ConfirmPassword">Confirm Password</label>
                    <input asp-for="user.ConfirmPassword" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm your password" />
                    <span class="fa fa-eye" id="toggleConfirmPassword" onclick="togglePasswordVisibility('ConfirmPassword', 'toggleConfirmPassword')"></span>
                    <span asp-validation-for="user.ConfirmPassword" data-valmsg-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group form-group-spacing">
                    <label>Gender</label><br />
                    <input type="radio" asp-for="user.Gender" value="Male" name="Sex" /> Male
                    <input type="radio" asp-for="user.Gender" value="Female" name="Sex" /> Female
                    <span asp-validation-for="user.Gender" class="text-danger" data-valmsg-for="Sex"></span>
                </div>
                <div class="form-group form-group-spacing">
                    <label for="PhoneNumber">Phone Number</label>
                    <input asp-for="user.Phone" class="form-control" id="PhoneNumber" name="PhoneNumber" placeholder="Enter your phone number" />
                    <span asp-validation-for="user.Phone" data-valmsg-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group form-group-spacing">
                    <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                </div>
                <div class="form-group mt-3 text-center">
                    <p>Already have an account? <a asp-page="Login" class="custom-link">Login</a></p>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function togglePasswordVisibility(inputId, toggleId) {
        const input = document.getElementById(inputId);
        const toggle = document.getElementById(toggleId);
        if (input.type === "password") {
            input.type = "text";
            toggle.classList.remove("fa-eye");
            toggle.classList.add("fa-eye-slash");
        } else {
            input.type = "password";
            toggle.classList.remove("fa-eye-slash");
            toggle.classList.add("fa-eye");
        }
    }
</script>
@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
